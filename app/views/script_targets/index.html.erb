<h2>
  Listing target configuration of scripts
</h2>

<%= paginate @script_targets %>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @script_targets.each do |script_target| %>
  <tr>
    <td>
      <%= link_to script_target.script_name, script_target.script %>
      will run on
      <%= script_target.targetable_type.downcase %>
      <%= link_to script_target.targetable.name, script_target.targetable %>
    </td>
    <td><%= link_to 'Show', script_target %></td>
    <td><%= link_to 'Chart it!', chart_path(script_target) %></td>
    <td><%= link_to 'Edit', edit_script_target_path(script_target) %></td>
    <td><%= link_to 'Destroy', script_target_path(script_target, :destroy => true), :confirm => "Are you sure you want do destroy this?", :method => :delete %></td>
  </tr>
<% end %>
</table>

